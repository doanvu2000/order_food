<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:padding="@dimen/_8sdp"
    android:id="@+id/layoutItem"
    android:layout_width="@dimen/_80sdp"
    android:background="@drawable/border_item"
    android:layout_marginTop="@dimen/_8sdp"
    android:layout_height="wrap_content">
    <ImageView
        android:layout_centerHorizontal="true"
        android:id="@+id/imgFood"
        android:layout_width="@dimen/_30sdp"
        android:layout_height="@dimen/_30sdp"/>
    <TextView
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/imgFood"
        android:id="@+id/tvNamefood"
        android:textSize="@dimen/_12sdp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <TextView
        android:visibility="invisible"
        android:id="@+id/tv_left"
        android:layout_below="@+id/imgFood"
        android:layout_toRightOf="@+id/tvNamefood"
        android:text="("
        android:textSize="@dimen/_12sdp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <TextView
        android:visibility="invisible"
        android:id="@+id/tvAmount"
        android:layout_below="@+id/imgFood"
        android:layout_toRightOf="@+id/tv_left"
        android:text="1"
        android:textSize="@dimen/_12sdp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <TextView
        android:visibility="invisible"
        android:id="@+id/tv_right"
        android:layout_below="@+id/imgFood"
        android:layout_toRightOf="@+id/tvAmount"
        android:text=")"
        android:textSize="@dimen/_12sdp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <TextView
        android:layout_below="@+id/tvNamefood"
        android:id="@+id/tvDongia"
        android:text="Đơn giá: "
        android:textSize="@dimen/_9sdp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <TextView
        android:layout_marginRight="@dimen/_10sdp"
        android:layout_toLeftOf="@+id/dolaa"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/tvNamefood"
        android:id="@+id/tvPrice"
        android:textSize="@dimen/_9sdp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <TextView
        android:layout_alignParentRight="true"
        android:id="@+id/dolaa"
        android:text="$"
        android:textSize="@dimen/_9sdp"
        android:layout_below="@+id/tvNamefood"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>



</RelativeLayout>